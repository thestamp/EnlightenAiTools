@inherits GptSettingsComponentBase
<MudExpansionPanels MultiExpansion="true">
    <MudExpansionPanel Text="GPT Settings Overrides">
        <MudPaper Elevation="0" Style="padding: 16px;">
            <MudText Typo="Typo.h6" Style="margin-top: 12px;">Quiz Generation</MudText>
            <MudTextField T="string" Label="System Message" @bind-Value="Settings.QuizSystemMessage" Variant="Variant.Outlined" Lines="2" />
            <MudTextField T="string" Label="Question Prompt" @bind-Value="Settings.QuizQuestionPrompt" Variant="Variant.Outlined" Lines="2" />
            <MudTextField T="string" Label="Answer Prompt" @bind-Value="Settings.QuizAnswerPrompt" Variant="Variant.Outlined" Lines="2" />

            <MudText Typo="Typo.h6" Style="margin-top: 12px;">Inquiry</MudText>
            <MudTextField T="string" Label="System Message" @bind-Value="Settings.InquireSystemMessage" Variant="Variant.Outlined" Lines="2" />
            <MudTextField T="string" Label="Question Prompt" @bind-Value="Settings.InquirePrompt" Variant="Variant.Outlined" Lines="2" />
        </MudPaper>
    </MudExpansionPanel>
</MudExpansionPanels>
