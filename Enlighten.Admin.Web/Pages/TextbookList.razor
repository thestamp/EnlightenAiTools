@inherits TextbookListBase
@page "/Textbooks"

<MudText Typo="Typo.h4">Textbook List</MudText>
<MudButton Href="EditTextbook" Variant="Variant.Filled" Color="Color.Primary" OnClick="AddTextbook">Add Textbook</MudButton>

<MudGrid>
    @foreach (var textbook in Textbooks)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudCard Style="margin: 15px;">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@textbook.Name</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Href="@($"/EditTextbook/{textbook.Id}")" Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>

                <MudCardContent>
                    <MudText Typo="Typo.body2">@textbook.Summary</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>